<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screenkorea"
        tools:context="com.example.user.easykoreanlearning.mainMenu">

        <ImageButton
            android:id="@+id/btnKrWords"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnKrChar"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wordsbutton"
            android:text="Words"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:textSize="30sp"
            app:layout_constraintRight_toRightOf="@+id/btnKrChar"
            app:layout_constraintLeft_toLeftOf="@+id/btnKrChar"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/btnKrSent" />

    <ImageButton
        android:id="@+id/btnKrSent"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/btnKrGreet"
        android:layout_below="@+id/btnKrWords"
        android:text="SENTENCES"
        android:src="@drawable/sentencesbutton"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@+id/btnKrWords"
        app:layout_constraintLeft_toLeftOf="@+id/btnKrWords"
        app:layout_constraintHorizontal_bias="0.634"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/btnKrGreet" />

    <ImageButton
        android:id="@+id/btnKrGreet"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/btnKrWords"
        android:layout_below="@+id/btnKrSent"
        android:text="GREETING"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/greetingsbutton"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="97dp"
        app:layout_constraintRight_toRightOf="@+id/btnKrSent"
        app:layout_constraintLeft_toLeftOf="@+id/btnKrSent"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <ImageButton
        android:id="@+id/btnKrChar"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Characters"
        android:src="@drawable/characterbutton"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnKrWords"
        app:layout_constraintVertical_bias="0.95"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
